header.header
    nav.nar.nav--tours
        a.nav__el(href='/')
            .header__logo
                img(src='/img/logo-pink.png' height='63.3' width='63' alt='Concerto Logo') 
                p Concerto

    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log out
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='/register') Sign Up